<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/minjednp"
            android:text="@string/plus"
            android:background="@drawable/rectangle_button_background"
            android:textColor="@android:color/white"
            android:layout_margin="4dp"
            app:layout_constraintBottom_toTopOf="@+id/mindzies" app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:layout_width="wrap_content"
            android:id="@+id/mindziesp"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_button_background"
            android:textColor="@android:color/white"
            android:layout_margin="4dp"
            android:text="@string/plus" app:layout_constraintStart_toEndOf="@+id/minjednp"
            app:layout_constraintBottom_toTopOf="@+id/minjedn"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/sekdziesp"
            android:text="@string/plus"
            android:background="@drawable/rectangle_button_background"
            android:textColor="@android:color/white"
            android:layout_margin="4dp"
            app:layout_constraintEnd_toStartOf="@+id/sekjednp" app:layout_constraintBottom_toTopOf="@+id/sekdzies"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/sekjednp"
            android:text="@string/plus"
            android:background="@drawable/rectangle_button_background"

            android:textColor="@android:color/white"
            android:layout_margin="4dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/sekjedn"/>
    <TextView
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:id="@+id/mindzies"
            android:text="@string/_0"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_margin="4dp"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3"/>

    <TextView
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:id="@+id/minjedn"
            android:text="@string/_0"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_margin="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mindzies"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3"/>

    <TextView
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:id="@+id/sekdzies"
            android:text="@string/_0"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_margin="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/sekjedn"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3"/>

    <TextView
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:id="@+id/sekjedn"
            android:text="@string/_0"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_margin="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/minjednm"
            android:text="@string/minus"
            android:background="@drawable/rectangle_button_background"
            android:textColor="@android:color/white"
            android:layout_margin="4dp"
            app:layout_constraintTop_toBottomOf="@+id/mindzies" app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:layout_width="wrap_content"
            android:id="@+id/mindziesm"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_button_background"
            android:textColor="@android:color/white"
            android:text="@string/minus" app:layout_constraintStart_toEndOf="@+id/minjednm"
            android:layout_margin="4dp"
            app:layout_constraintTop_toBottomOf="@+id/minjedn"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/sekdziesm"
            android:text="@string/minus"
            android:background="@drawable/rectangle_button_background"
            android:textColor="@android:color/white"
            android:layout_margin="4dp"
            app:layout_constraintEnd_toStartOf="@+id/sekjednm" app:layout_constraintTop_toBottomOf="@+id/sekdzies"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/sekjednm"
            android:text="@string/minus"
            android:background="@drawable/rectangle_button_background"
            android:textColor="@android:color/white"
            android:layout_margin="4dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/sekjedn"/>

    <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/startbut"
            android:text="@string/start"
            android:background="@drawable/rectangle_button_background"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/sekjedn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/stopbut"
             app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0"/>

    <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/stopbut"
            android:text="@string/stop"
            android:background="@drawable/rectangle_button_background"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/sekjedn"
            app:layout_constraintStart_toEndOf="@+id/startbut"
            app:layout_constraintEnd_toStartOf="@+id/resetbut"
             app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/resetbut"
            android:text="@string/reset"
            android:background="@drawable/rectangle_button_background"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/sekjedn"
            app:layout_constraintStart_toEndOf="@+id/stopbut"
            app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>